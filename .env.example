# Backend API Configuration
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
DATABASE_URL=postgresql://user:password@db:5432/ai_agent_db
SECRET_KEY=your_secret_key_for_jwt # CHANGE THIS IN PRODUCTION
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AI Agent Service Configuration
AI_AGENT_HOST=0.0.0.0
AI_AGENT_PORT=8001
OPENAI_API_KEY=your_openai_api_key # CHANGE THIS
PINECONE_API_KEY=your_pinecone_api_key # CHANGE THIS
PINECONE_ENVIRONMENT=your_pinecone_environment # e.g., us-west1-gcp or similar
PINECONE_INDEX_NAME=ai-agent-index

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD= # Set if your Redis requires a password

# PostgreSQL Configuration (for Docker Compose)
POSTGRES_USER=user
POSTGRES_PASSWORD=password
POSTGRES_DB=ai_agent_db

# Frontend Configuration (passed as build arguments or runtime env vars if SSR)
# Example: REACT_APP_API_BASE_URL usually set during build time or via Nginx proxy

# AWS Configuration (for deployment scripts - not directly used by the app runtime)
AWS_REGION=your_aws_region
AWS_ACCOUNT_ID=your_aws_account_id
ECR_REPOSITORY_NAME_BACKEND=ai-agent-backend
ECR_REPOSITORY_NAME_AI_AGENT=ai-agent-service
ECR_REPOSITORY_NAME_FRONTEND=ai-agent-frontend # Or Nginx if frontend is served by it

# Pinecone specific vector dimension (depends on the embedding model used)
# For OpenAI's text-embedding-ada-002, the dimension is 1536
PINECONE_VECTOR_DIMENSION=1536
